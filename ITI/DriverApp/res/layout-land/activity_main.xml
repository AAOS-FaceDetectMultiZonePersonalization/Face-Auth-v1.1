<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard">

    <!-- Top Control Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottombar_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left: Driver Profile -->
        <LinearLayout
            android:id="@+id/driver_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ellipse"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Driver Profile"
                android:src="@drawable/profile"
                app:tint="#FF5555" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Driver"
                android:textColor="@color/time"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Center: Date and Time -->
        <LinearLayout
            android:id="@+id/date_time_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/07/2025"
                android:textColor="@color/time"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/main_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:54"
                android:textColor="@color/time"
                android:textSize="20sp"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Right: Logo -->
        <LinearLayout
            android:id="@+id/logo_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iti_logo"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:contentDescription="ITI Logo"
                android:src="@drawable/iti_logo" />
        </LinearLayout>
    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottombar_background"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/home_icon"
            android:contentDescription="Home"
            app:tint="#FF5555" />

        <ImageView
            android:id="@+id/nav_ac"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ac"
            android:contentDescription="Air Conditioning"
            app:tint="#FF5555" />

        <ImageView
            android:id="@+id/nav_seat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/seat"
            android:contentDescription="Seat Settings"
            app:tint="#FF5555" />

        <ImageView
            android:id="@+id/nav_notifications"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/notification_icon"
            android:contentDescription="Notifications"
            app:tint="#FF5555" />

        <ImageView
            android:id="@+id/nav_app_grid"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/app_grid_icon"
            android:contentDescription="App Grid"
            app:tint="#FF5555" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
